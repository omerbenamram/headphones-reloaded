{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "sourceMap": true
  },
  "files": [
    "typings/main.d.ts",
    "app/bootstrap.ts",
    "app/vendor.ts"
  ],
  "filesGlob": [
    "./app/**/*.ts",
    "!./node_modules/**/*.ts",
    "typings/main.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": true }
}
