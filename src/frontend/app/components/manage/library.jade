<!--suppress ALL -->
form#configuration-wrapper((ngSubmit)='updateConfiguration()', #configurationForm='ngForm')
  .row
    h1(style='padding-bottom:1em;') Library Configuration
  .form-group
    .row.form-header
      .col-md-4
        span.fa.fa-folder-o.center-value &nbsp;
        span.text-left Library Path
      .col-md-8.center-value.text-muted.text-xs-right This is where Headphones searches for your music files
    .row
      input.col-md-12.form-control([(ngModel)]='newConfiguration.libraryPath', ngControl='libraryPath', type='text', placeholder='{{(cachedConfiguration | async)?.libraryPath}}')
  .row
    .btn.btn-primary((click)='updateConfiguration()', type='submit') Save Changes
